<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="article">
	<!-- <typeAlias type="summer.article.model.Article" alias="Article"/> -->
	<!-- <resultMap id="article" type="summer.article.model.Article"/> -->
	<select id="count" resultType="int">
	  	SELECT 
	  		COUNT(idx) 
	  	  FROM BOARD 
	  	 WHERE deleted = 0
	</select>
	
	<select id="articles" resultType="summer.article.model.Article">
		SELECT IDX
			,  USER_NM AS USERNAME
		  FROM BOARD
	</select>
	
	<insert id="insertArticle" parameterType="summer.article.model.Article">
		INSERT INTO BOARD(
			  USER_NM
			, TITLE
			, CONTENT
			, CREATED
		)VALUES(
			  #{userName}
			, #{title}
			, #{content}
			, NOW()
		)
	</insert>
</mapper>
